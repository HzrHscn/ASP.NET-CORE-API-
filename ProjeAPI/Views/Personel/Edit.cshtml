@model ProjeUI.Models.Personel.PersonelViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<h1>Edit</h1>

<h4>PersonelViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" asp-controller="Personel" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.HiddenFor(model => model.ID)

            <div class="form-group">
                @Html.LabelFor(model => model.NameSurname, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.NameSurname, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.NameSurname, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Mail, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Mail, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Mail, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Departman, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Departman, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Departman, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Rol, new { @class = "control-label" })
                @Html.TextBoxFor(model => model.Rol, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Rol, "", new { @class = "text-danger" })
            </div>

            <div class="form-group form-check">
                @Html.CheckBoxFor(model => model.Status, new { @class = "form-check-input" })
                @Html.LabelFor(model => model.Status, new { @class = "form-check-label" })
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
